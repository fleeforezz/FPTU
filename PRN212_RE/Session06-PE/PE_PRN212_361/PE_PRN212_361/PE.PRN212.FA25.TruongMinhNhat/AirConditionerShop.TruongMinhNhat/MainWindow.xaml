<Window
    x:Class="AirConditionerShop.TruongMinhNhat.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AirConditionerShop.TruongMinhNhat"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="330"
    Width="600"
    FontFamily="Arial"
    Background="#FFD4F7D4"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid
            x:Name="AirConDataGrid"
            HorizontalAlignment="Left"
            Height="273"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            AutoGenerateColumns="False"
            Width="408"
            Loaded="AirConDataGrid_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Id"
                    Width="100"
                    Binding="{Binding AirConditionerId}" />
                <DataGridTextColumn
                    Header="Name"
                    Width="150"
                    Binding="{Binding AirConditionerName}" />
                <DataGridTextColumn
                    Header="Warranty"
                    Width="100"
                    Binding="{Binding Warranty}" />
                <DataGridTextColumn
                    Header="Sound Pressure Level"
                    Width="100"
                    Binding="{Binding SoundPressureLevel}" />
                <DataGridTextColumn
                    Header="Feature Function"
                    Width="100"
                    Binding="{Binding FeatureFunction}" />
                <DataGridTextColumn
                    Header="Quantity"
                    Width="100"
                    Binding="{Binding Quantity}" />
                <DataGridTextColumn
                    Header="Dollar Pricel"
                    Width="100"
                    Binding="{Binding DollarPrice}" />
                <DataGridTextColumn
                    Header="Supplier"
                    Width="100"
                    Binding="{Binding Supplier.SupplierName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            x:Name="LoadDataButton"
            Content="Load data"
            HorizontalAlignment="Left"
            Height="26"
            Background="Red"
            Margin="480,30,0,0"
            VerticalAlignment="Top"
            Width="75" />
        <Button
            x:Name="CreateButton"
            Content="Create"
            HorizontalAlignment="Left"
            Height="26"
            Margin="480,67,0,0"
            VerticalAlignment="Top"
            Width="75"
            Click="CreateButton_Click" />
        <Button
            x:Name="UpdateButton"
            Content="Update"
            HorizontalAlignment="Left"
            Height="26"
            Margin="480,104,0,0"
            VerticalAlignment="Top"
            Width="75"
            Click="UpdateButton_Click" />
        <Button
            x:Name="DeleteButton"
            Content="Delete"
            HorizontalAlignment="Left"
            Height="26"
            Margin="480,140,0,0"
            VerticalAlignment="Top"
            Width="75"
            Click="DeleteButton_Click" />
        <Button
            Content="Quit"
            HorizontalAlignment="Left"
            Height="26"
            Margin="480,177,0,0"
            VerticalAlignment="Top"
            Width="75" />

    </Grid>
</Window>
