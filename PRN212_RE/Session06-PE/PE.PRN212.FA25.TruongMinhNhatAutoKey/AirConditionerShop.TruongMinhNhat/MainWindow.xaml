<Window
    x:Class="AirConditionerShop.TruongMinhNhat.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AirConditionerShop.TruongMinhNhat"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="330"
    Width="600"
    FontFamily="Arial"
    FontSize="14"
    Background="#FFD4F7D4"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid
            x:Name="ACDataGrid"
            HorizontalAlignment="Left"
            Height="228"
            Margin="10,76,0,0"
            VerticalAlignment="Top"
            Width="494"
            AutoGenerateColumns="False"
            Loaded="ACDataGrid_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Id"
                    Width="100"
                    Binding="{Binding AirConditionerId}" />
                <DataGridTextColumn
                    Header="Name"
                    Width="150"
                    Binding="{Binding AirConditionerName}" />
                <DataGridTextColumn
                    Header="Warranty"
                    Width="100"
                    Binding="{Binding Warranty}" />
                <DataGridTextColumn
                    Header="Sound Pressure Level"
                    Width="100"
                    Binding="{Binding SoundPressureLevel}" />
                <DataGridTextColumn
                    Header="Feature Function"
                    Width="100"
                    Binding="{Binding FeatureFunction}" />
                <DataGridTextColumn
                    Header="Quantity"
                    Width="100"
                    Binding="{Binding Quantity}" />
                <DataGridTextColumn
                    Header="Dollar Pricel"
                    Width="100"
                    Binding="{Binding DollarPrice}" />
                <DataGridTextColumn
                    Header="Manu. Date"
                    Width="100"
                    Binding="{Binding ManufacturedDate}" />
                <DataGridTextColumn
                    Header="Supplier"
                    Width="100"
                    Binding="{Binding Supplier.SupplierName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            x:Name="CreateButton"
            Content="Create"
            HorizontalAlignment="Left"
            Margin="524,76,0,0"
            VerticalAlignment="Top"
            Width="66"
            Click="CreateButton_Click" />
        <Button
            x:Name="UpdateButton"
            Content="Update"
            HorizontalAlignment="Left"
            Margin="524,101,0,0"
            VerticalAlignment="Top"
            Width="66"
            Click="UpdateButton_Click" />
        <Button
            x:Name="DeleteButton"
            Content="Delete"
            HorizontalAlignment="Left"
            Margin="524,126,0,0"
            VerticalAlignment="Top"
            Width="66"
            Click="DeleteButton_Click" />
        <Button
            x:Name="QuitButton"
            Content="Quit"
            HorizontalAlignment="Left"
            Margin="524,151,0,0"
            VerticalAlignment="Top"
            Width="66" />

    </Grid>
</Window>
