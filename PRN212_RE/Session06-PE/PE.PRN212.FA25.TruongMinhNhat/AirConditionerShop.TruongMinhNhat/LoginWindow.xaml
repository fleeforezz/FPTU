<Window
    x:Class="AirConditionerShop.TruongMinhNhat.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AirConditionerShop.TruongMinhNhat"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="330"
    Width="600"
    FontFamily="Arial"
    FontSize="14"
    Background="#FFD4F7D4"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Label
            Content="Email"
            HorizontalAlignment="Left"
            Margin="190,76,0,0"
            VerticalAlignment="Top" />
        <TextBox
            x:Name="EmailTextBox"
            HorizontalAlignment="Center"
            Height="29"
            Margin="0,107,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="210" />
        <Label
            Content="Password"
            HorizontalAlignment="Left"
            Margin="195,151,0,0"
            VerticalAlignment="Top" />
        <TextBox
            x:Name="PasswordTextBox"
            HorizontalAlignment="Center"
            Height="29"
            Margin="0,182,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="210" />
        <Button
            x:Name="LoginButton"
            Content="Login"
            HorizontalAlignment="Center"
            Height="37"
            Margin="0,235,0,0"
            VerticalAlignment="Top"
            Width="210"
            Click="LoginButton_Click" />

    </Grid>
</Window>
