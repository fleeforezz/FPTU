<Window
    x:Class="Jso.StudentManager.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Jso.StudentManager"
    mc:Ignorable="d"
    Title="Login"
    Height="450"
    Width="800"
    Background="Pink"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle
            HorizontalAlignment="Left"
            Height="305"
            Margin="155,106,0,0"
            Stroke="Black"
            VerticalAlignment="Top"
            Width="432"
            Fill="Red" 
            RadiusX="16"
            RadiusY="16"/>

        <Button
            x:Name="LoginButton"
            Content="Login"
            HorizontalAlignment="Left"
            Height="52"
            Margin="388,317,0,0"
            VerticalAlignment="Top"
            Cursor="Hand"
            Foreground="White"
            FontWeight="Bold"
            FontSize="16px"
            Background="Purple"
            Width="120"
            Click="LoginButton_Click" />
        <Label
            Content="Email: "
            Margin="275,133,335,262"
            Width="190" />

        <Label
            Content="Password: "
            Margin="280,216,330,179"
            Width="190"
            RenderTransformOrigin="1.132,-0.563" />
        <TextBox
            x:Name="EmailTextBox"
            HorizontalAlignment="Left"
            Margin="280,177,0,0"
            TextWrapping="Wrap"
            Text="Enter email"
            VerticalAlignment="Top"
            Width="190" />
        <TextBox
            x:Name="PasswordTextBox"
            HorizontalAlignment="Left"
            Margin="280,260,0,0"
            TextWrapping="Wrap"
            Text="Enter password"
            VerticalAlignment="Top"
            Width="190" />
        <Button
            x:Name="QuitButton"
            Content="Quit"
            HorizontalAlignment="Left"
            Height="52"
            Margin="237,317,0,0"
            VerticalAlignment="Top"
            Cursor="Hand"
            Foreground="White"
            FontWeight="Bold"
            FontSize="16px"
            Background="Purple"
            Width="120"
            Click="QuitButton_Click" />

    </Grid>
</Window>
