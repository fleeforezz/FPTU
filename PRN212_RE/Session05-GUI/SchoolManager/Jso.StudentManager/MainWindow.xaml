<Window
    x:Class="Jso.StudentManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Jso.StudentManager"
    mc:Ignorable="d"
    Title="The List of students"
    Height="450"
    Width="870"
    Background="DarkRed"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Button
            x:Name="LoadDataButton"
            Content="Load Data"
            HorizontalAlignment="Left"
            Height="52"
            Margin="722,27,0,0"
            VerticalAlignment="Top"
            Cursor="Hand"
            Foreground="White"
            FontWeight="Bold"
            FontSize="16px"
            Background="Purple"
            Width="120" />
        <Button
            x:Name="UpdateButton"
            Content="Update"
            HorizontalAlignment="Left"
            Height="52"
            Margin="722,97,0,0"
            VerticalAlignment="Top"
            Cursor="Hand"
            Foreground="White"
            FontWeight="Bold"
            FontSize="16px"
            Background="Purple"
            Width="120" />

        <Button
            x:Name="QuitButton"
            Content="Quit"
            HorizontalAlignment="Left"
            Height="52"
            Margin="722,165,0,0"
            VerticalAlignment="Top"
            Cursor="Hand"
            Foreground="White"
            FontWeight="Bold"
            FontSize="16px"
            Background="Purple"
            Width="120"
            Click="QuitButton_Click" />
        <DataGrid
            HorizontalAlignment="Left"
            Height="274"
            Margin="34,41,0,0"
            VerticalAlignment="Top"
            Width="656"
            d:ItemsSource="{d:SampleData ItemCount=5}" />

    </Grid>
</Window>
